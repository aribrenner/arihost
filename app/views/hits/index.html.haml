- if @node
  = "#{@hits.count} hits for "
  = link_to @node.short_url, node_path(@node.short_url)
- else
  = "#{@hits.count} total hits"


- if @hits.present?

  %table
    %tr
      %td ip
      %td time

    - @hits.each do |hit|
      %tr
        %td
          = hit.ip
        %td
          = hit.created_at.strftime("%A, %B %d, %Y at %I:%M %p")
