%h2
  create an account

= form_for @user do |form|
  = form.text_field :username, placeholder: 'username'
  = form.password_field :password, placeholder: 'password', class: 'js-user-password-input', required: true
  = password_field_tag :password_confirmation, nil, placeholder: 'confirm password', class: 'js-user-password-input', required: true
  = submit_tag 'sign up'

%br

= link_to 'returning user?', new_session_path
